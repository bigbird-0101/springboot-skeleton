<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nango.skeletonweb.domain.entity.mapper.UserMapper">
    <insert id="save" parameterType="com.nango.skeletonweb.domain.entity.UserDO">
        INSERT INTO t_user(name,phone,email,city_id,sex,password)
        VALUES
        (
        #{name},#{phone},#{email},#{cityId},#{sex},#{password}
        )
    </insert>

    <select id="get" parameterType="long" resultType="com.nango.skeletonweb.domain.entity.UserDO">
    	select * from t_user where id = #{id} limit 1
    </select>

    <select id="getBySex" parameterType="integer" resultType="com.nango.skeletonweb.domain.entity.UserDO">
    	select * from t_user where sex = #{sex} limit 1
    </select>
</mapper>